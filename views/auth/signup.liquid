{% layout 'layout.liquid' %}
{% block content %}

<div style="text-align: center">
    <h1 class="login-header" id="login-name">spacr</h1>
    <h3 class="login-header" id="login-desc">App Built on NASA Open API - Astronomy pictures of the day</h3>
</div>
<div style="text-align: center; margin-top: 6vh;">
    <div id="login-form" style="display: inline-block; text-align: center">
        <form form action="/auth/signup" method="POST" style="justify-content: center;">
            <fieldset>
                {%- comment -%} <label class="form-label" style="background-color:rgba(0,0,0,0);">Username: </label> {%- endcomment -%}
                <input type="text" name="username" placeholder="USERNAME" class="form-control login-field" required>
                {%- comment -%} <label class="form-label">Password</label> {%- endcomment -%}
                <input type="password" name="password" placeholder="PASSWORD" class="form-control login-field" required>
            </fieldset>
            <input type="submit" value="CREATE ACCOUNT" class="btn btn-outline-light" id="login">
        </form>
    </div>
</div>
<p id="signup-forgot"><a href="/">Log In Page</a></p>

{% endblock %}

{%- comment -%} {% block content %}

<div class="container-sm">
    <form action="/auth/signup" method="POST">
        <fieldset>
            <legend>Sign Up Here!</legend>
            <label class="form-label">Username: </label>
            <input type="text" name="username" placeholder="username" class="form-control" required>
            <label class="form-label">Password</label>
            <input type="password" name="password" placeholder="enter password" class="form-control" required>
        </fieldset>
        <input type="submit" value="Create Account" class="btn btn-success">
    </form>
</div>

{% endblock %} {%- endcomment -%}