{% layout 'layout.liquid' %}


{% block content %}
<div class="container-md">
    <article>
        <h1>{{ apod.title }}</h1>
        <img class="img-fluid" src="{{apod.hdurl}}" alt="{{apod.title}}">

        <h6>Date: {{apod.date}}</h6>
        <p>{{apod.explanation}}</p>
        
        {% if apod.copyright %}
            <h6>Copyright: {{apod.copyright}}</h6>
        {% endif %}
        {%- comment -%} {% if apod.owner == userId %}
            <div class="btn-group">

                <a href="/apods/{{ apod.id }}/edit" class="btn btn-primary">Edit</a>
                <form action="/apods/{{ apod.id }}?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger">
                </form>
            </div>
        {% endif %}  {%- endcomment -%}
    </article>
    <h4>Comments</h4>
        <hr>
        {% if loggedIn %}
            <div class="col-md-6">
                <form action="/comments/{{apod.id}}" method="POST">
                    <fieldset>
                        <legend>Add Comment</legend>
                        <label class="form-label">comment:</label>
                        <input class="form-control" type="text" placeholder="enter your comment..." name="note" required>
                    </fieldset>
                    <input class="btn btn-success" type="submit" value="add comment">
                </form>
            </div>
        {% else %}
            <div class="col-md-6">
                <small>If you'd like to leave a comment, please log in...</small>
            </div>
        {% endif %}
        <hr>
        {% if apod.comments.length > 0%}
            <div class="container-sm justify-content-center">
                <div class="col-md-8 col-lg-6">
                    {% for comment in apod.comments %}
                        {% render '../auth/comment.liquid', comment: comment, userId: userId, apod: apod %}
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <small>no comments yet...</small>
        {% endif %}
        {% if apod.owner == userId %}
            <div class="btn-group">

                {%- comment -%} <a href="/apods/{{ apod.id }}/edit" class="btn btn-primary">Edit</a> {%- endcomment -%}
                <form action="/apods/{{ apod.id }}?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger">
                </form>
            </div>
        {% endif %}
</div>
{% endblock %}


{%- comment -%} {% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ apod.title }} -
            {% if apod.ready %}
            Ready
            {% else %}
            Not Ready
            {%endif%}
        </h2>
        <h3>Amount: {{ apod.amount }}</h3>
        <h6>Body: {{ apod.body }}</h6>
        
    </article>
</div>
{% endblock %} {%- endcomment -%}