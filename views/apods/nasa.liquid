{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h1>{{ apod.title }}</h1>
        <img class="img-fluid" src="{{apod.hdurl}}" alt="{{apod.title}}">

        <button type="button" class="btn btn-success" action="/apods" method="POST" data={{apod}} redirect="/apods">Add to 'The Galaxy'</button>
        <h6>Date: {{apod.date}}</h6>
        <p>{{apod.explanation}}</p>
        
        {% if apod.copyright %}
            <h6>Copyright: {{apod.copyright}}</h6>
        {% endif %}




        {%- comment -%} {% if apod.owner == userId %}
            <div class="btn-group">

                <a href="/apods/{{ apod.id }}/edit" class="btn btn-primary">Edit</a>
                <form action="/apods/{{ apod.id }}?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger">
                </form>
            </div>
        {% endif %} {%- endcomment -%}
    </article>
</div>
{% endblock %}